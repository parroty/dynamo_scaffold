<form action="/<%= @weather.id%>" class="form-horizontal" id="edit_post" method="post">
  <fieldset>
    <legend>Edit Post</legend>

<%= render "form.html", weather: @weather %>

    <br/>
    <div class="form-actions">
      <input class="btn btn-primary" name="commit" type="submit" value="Update Weather" />
      <a href="/" class="btn btn-default">Cancel</a>
    </div>
  </fieldset>
</form>
